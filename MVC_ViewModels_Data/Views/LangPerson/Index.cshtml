@model MVC_ViewModels_Data.Models.LanguageViewModel

<form asp-controller="LangPerson" asp-action="BindLanguagePeople" asp-route-id="" method="post" id="Add">
    <label asp-for="@Model.CreateLanguagePeopleViewModel.People">People</label>
    <select asp-for="@Model.CreateLanguagePeopleViewModel.People">
        @foreach (var pers in Model.Peoples)
        {
            <option value="@pers.PersonId">@pers.Name</option>

        }
    </select>
    <label asp-for="@Model.CreateLanguagePeopleViewModel.Language">Language</label>
    <select asp-for="@Model.CreateLanguagePeopleViewModel.Language">
        @foreach (var lang in Model.List)
        {
            <option value="@lang.LanguageID">@lang.Name</option>
        }
    </select>
    <input type="submit" value="Save" />
</form>

<div class="table-wrapper">
    <br>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Person Name</th>
                <th scope="col">Language</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var languagePeoples in Model.LanguagePeoples)
            {

                <tr>
                    <td>@languagePeoples.Person.Name</td>
                    <td>@languagePeoples.Language.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
